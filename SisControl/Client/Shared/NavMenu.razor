<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">Sistema de controle</a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass nav-scrollable">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All" @onclick="ToggleNavMenu">
                <span class="oi oi-home" aria-hidden="true"></span> Início
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="#Pessoas" @onclick="ToggleSubMenuPessoas">
                <span class="oi oi-@Sign" aria-hidden="true"></span> Pessoas
            </NavLink>
        </div>

        @if (Visible)
        {
            <div class="expand mx-3 p-2">
                <ul>
                    <li class="nav-item px-3">
                        <NavLink class="nav-link" href="consultarPessoas">
                            <span class="oi oi-people" aria-hidden="true"></span> Consultar
                        </NavLink>
                    </li>
                    <li class="nav-item px-3">
                        <NavLink class="nav-link" href="cadastrarPessoa">
                            <span class="oi oi-person" aria-hidden="true"></span> Cadastrar
                        </NavLink>
                    </li>
                </ul>
            </div>
        }
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="#ProximoMenu">
                <span class="oi oi-plus" aria-hidden="true"></span> Proximo Menu
            </NavLink>
        </div>

        
    </nav>
</div>


@code {
    private bool collapseNavMenu = true;
    private bool Visible = false;
    private string Sign = "plus";

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        @if (Visible)
        {
            ToggleSubMenuPessoas();
        }
        collapseNavMenu = !collapseNavMenu;
    }

    private void ToggleSubMenuPessoas()
    {
        Visible = !Visible;
        Sign = Visible ? "minus" : "plus";
    }

}
